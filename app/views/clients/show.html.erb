<div class="alert alert-warning">
  <p>
    Un client possède plusieurs informations différentes.
  </p></div>
<table class="table">
  <tr>
    <td>Nom</td>
    <td>
      <%= @client.name %>
    </td>
  </tr>
  <tr>
    <td>Prenom</td>
    <td>
      <%= @client.prenom %>
    </td>
  </tr>
  <tr>
    <td>Date de naissance</td>
    <td>
      <%= @client.datenaissance %>
    </td>
  </tr>
  <tr>
    <td>NAS</td>
    <td>
      <%= @client.nas %>
    </td>
  </tr>
  <tr>
    <td>Nombre d'enfants</td>
    <td>
      <%= @client.nombreenfants %>
    </td>
  </tr>
  <tr>
    <td>Compte taxes propriétaire</td>
    <td>
      <%= @client.comptetaxesproprietaire %>
    </td>
  </tr>
  <tr>
    <td>Conjoint</td>
    <td>
      <%= (@client.conjoint ? @client.conjoint.try(:nom) : 'Pas de conjoint') %>
    </td>
  </tr>
</table>
<h3>Adresses</h3>
<p>
  Liste de toutes les adresses ici.

</p>
<table class="table">
  <% @client.adresses.each do |adress|
  %>
    <tr>
      <td><%= adress.numerocivique %>
      </td>
      <td><%= adress.rue %>
      </td>
      <td><%= adress.codepostal %></td>
      <td><%= adress.ville  %></td>
      <td><%= adress.province %>
      </td>
    </tr>
  <% end %></table>
<h3>Enfants</h3>
<table class="table">
  <% @client.enfants.each do |enfant|
  %>
    <tr>
      <td><%= enfant.nom %>
      </td>
      <td><%= enfant.prenom %>
      </td>
      <td><%= enfant.datenaissance %>

      </td>
    </tr>
  <% end %></table>
<h3>Etats civils</h3>
<table class="table">
  <% @client.etat_civils.each do |etat_civil|
  %>
    <tr>
      <td><%= etat_civil.type %></td>
    </tr>
  <% end %>
</table>
<h3>Employeurs</h3>
<table class="table">
  <% @client.employeurs.each do |employeur|
  %>
    <tr>
      <td><%= employeur.nom %>
      </td>
    </tr>
  <% end %></table>
<h3>Études</h3>
<table class="table">
  <% @client.studies.each do |study|
  %>
    <tr>
      <td><%= study.secteuretudes %></td>
      <td><%= study.niveau %></td>
      <td><%= study.datedebut %></td>
      <td><%= study.datecompletion %></td>
    </tr>
  <% end %></table>
<h3>Institutions</h3>
<table class="table">
  <% @client.institutions.each do |institution|
  %>
    <tr>
      <td><%= institution.nom %></td>
    </tr>
  <% end %></table>

<%= link_to 'Edit', edit_client_path(@client) %> | <%= link_to 'Back', clients_path %>